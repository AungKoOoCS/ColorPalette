<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:foreground="?selectableItemBackground"
    android:background="@color/white"
    android:padding="@dimen/default_padding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/rectangle"
        android:layout_alignParentStart="true"
        android:background="@drawable/rectangle"
        android:layout_width="@dimen/rectangle_small"
        android:layout_height="@dimen/rectangle_small"
        android:transitionName="@string/transition_rectangle"/>

    <TextView
        android:id="@+id/txt_color_name"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:text="@string/color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_main_color_code"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:text="@string/color_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>